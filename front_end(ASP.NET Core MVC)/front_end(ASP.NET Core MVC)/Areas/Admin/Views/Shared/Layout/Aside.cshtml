                <li class="nav-item">
                    <a asp-Area="Admin" asp-controller="Accounts" asp-action="Index" class="nav-link">
                        <p>Account</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-Area="Admin" asp-controller="Categories" asp-action="Index" class="nav-link">
                        <p>Category</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-Area="Admin" asp-controller="Products" asp-action="Index" class="nav-link">
                        <p>Product</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-Area="Admin" asp-controller="Orders" asp-action="Index" class="nav-link">
                        <p>Order</p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
