@model front_end_ASP.NET_Core_MVC_.Models.DataModels.Account

@{
    ViewData["Title"] = "Edit";
    byte allowEdit = ViewBag.allowEdit;
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="AccountId" type="hidden" />
            <input type="hidden" name="allowEdit" value="@allowEdit" />
            @if (allowEdit == 1)
                {
                    <div class="form-group">
                        <label asp-for="AccountName" class="control-label"></label>
                        <input asp-for="AccountName" class="form-control" />
                    <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger">@ViewBag.error</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassWord" class="control-label"></label>
                        <input asp-for="ConfirmPassWord" class="form-control" />
                        <span asp-validation-for="ConfirmPassWord" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role" class="control-label"></label>
                        <select asp-for="Role" class="form-control" asp-items="ViewBag.options"></select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                }
                else
                {

                    <div class="form-group">
                        <label asp-for="AccountName" class="control-label"></label>
                        <span class="form-control">@Model.AccountName</span>
                        <input asp-for="AccountName" class="form-control" type="hidden" />
                        <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <span class="form-control">@Model.Email</span>
                        <input asp-for="Email" class="form-control" type="hidden" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <input asp-for="Password" class="form-control" type="hidden" />
                    <input asp-for="ConfirmPassWord" class="form-control" type="hidden" value="@Model.Password" />
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <span class="form-control">@Model.PhoneNumber</span>
                        <input asp-for="PhoneNumber" class="form-control" type="hidden" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role" class="control-label"></label>
                        <select asp-for="Role" class="form-control" asp-items="ViewBag.options"></select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                }
        </form>

    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

